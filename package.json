{
  "name": "je2be-web",
  "main": "index.js",
  "repository": "https://github.com/kbinani/je2be-web.git",
  "author": "kbinani <kbinani.bt@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@bugsnag/source-maps": "^2.3.1",
    "@types/node": "^18.11.15",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/sprintf-js": "^1.1.2",
    "@types/uuid": "^9.0.0",
    "bugsnag-build-reporter": "^2.0.0",
    "esbuild": "^0.16.7",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@bugsnag/js": "^7.18.0",
    "@bugsnag/plugin-react": "^7.18.0",
    "dexie": "^3.2.2",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sprintf-js": "^1.1.2",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "front": "esbuild --define:JE2BE_VERSION=\\\"$JE2BE_VERSION\\\" src/front/component/index.tsx --bundle --outfile=build/ts/script/front.js --sourcemap=external",
    "sworker": "esbuild --define:JE2BE_VERSION=\\\"$JE2BE_VERSION\\\" src/worker/service/sworker.ts --bundle --outfile=build/ts/sworker.js --sourcemap=external",
    "converter": "esbuild --define:JE2BE_VERSION=\\\"$JE2BE_VERSION\\\" src/worker/dedicated/converter.ts --bundle --outfile=build/ts/script/converter.js --sourcemap=external",
    "fmt": "prettier --write '*.ts' 'src/**/*.ts' 'src/**/*.tsx' 'public/style/*.css'",
    "dev": "ts-node dev.ts",
    "upsourcemaps": "bugsnag-source-maps upload-browser --api-key $BUGSNAG_API_KEY --app-version $JE2BE_VERSION --base-url https://je2be.app --directory build/ts",
    "reportbuild": "bugsnag-build-reporter --api-key $BUGSNAG_API_KEY --app-version $JE2BE_VERSION"
  }
}
